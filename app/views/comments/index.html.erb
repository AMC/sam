<h1>Listing comments</h1>

<table>
  <tr>
    <th>Assignment</th>
    <th>User</th>
    <th>Text</th>
  </tr>

<% @comments.each do |comments| %>
  <tr>
    <td><%=h comments.assignment_id %></td>
    <td><%=h comments.user_id %></td>
    <td><%=h comments.text %></td>
    <td><%= link_to 'Show', comments %></td>
    <td><%= link_to 'Edit', edit_comments_path(comments) %></td>
    <td><%= link_to 'Destroy', comments, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comments', new_comments_path %>